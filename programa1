// Programa 2: algoritmo que que receba 100 valores numéricos inteiros e mostre a soma desses 100 números.

import javax.swing.*;
class Somar {
    public static void main (String args []){
        int VetSoma [], i, soma = 0;
        VetSoma = new int [100];

        for (i = 0; i<=99; i++){
            VetSoma[i] = Integer.parseInt(JOptionPane.showInputDialog("Digite um número inteiro"));
            soma = soma + VetSoma[i];
        }
        System.out.println ("A soma dos 100 valores digitados é:" + soma);
        System.exit(0);
    }
}




